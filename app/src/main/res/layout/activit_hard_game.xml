<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/granjafondo">

    <ImageView
        android:layout_width="450dp"
        android:layout_height="120dp"
        android:layout_marginLeft="415dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/animal_frame_design_hard"
        app:backgroundTint="@null"/>

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="510dp"
        android:text="00:00"
        android:textSize="30sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp" />
    <ImageView
        android:layout_width="65dp"
        android:layout_height="80dp"
        android:src="@drawable/watch"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="450dp">
    </ImageView>



    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/errorimage"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="665dp"
        />
    <ImageView
        android:id="@+id/errorImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/errorimagen2"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/errorsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="740dp"
        android:text="0"
        android:textSize="30sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp" />
    <View
        android:layout_width="8dp"
        android:layout_height="110dp"
        android:layout_marginStart="640dp"
        android:layout_marginTop="14dp"
        android:background="#FFA726"
        />
    <include
        layout="@layout/inventario_layout" />


    <ImageView
        android:id="@+id/gallina"
        android:layout_width="@dimen/low_size"
        android:layout_height="@dimen/low_size"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="@dimen/translationX_low_size"
        android:translationY="45dp"/>

    <ImageView
        android:id="@+id/imgSiluetaGallina"
        android:layout_width="@dimen/low_size"
        android:layout_height="@dimen/low_size"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="0dp"
        android:translationY="80dp"/> <!-- Ajustar distancia vertical -->

    <ImageView
        android:id="@+id/imgCerdo"
        android:layout_width="@dimen/midSize"
        android:layout_height="@dimen/midSize"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationY="170dp"/> <!-- Ajustar distancia vertical -->

    <ImageView
        android:id="@+id/imgSiluetaCerdo"
        android:layout_width="@dimen/midSize"
        android:layout_height="@dimen/midSize"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="0dp"
        android:translationY="160dp"/> <!-- Ajustar distancia vertical -->

    <ImageView
        android:id="@+id/imgOveja"
        android:layout_width="@dimen/midSize"
        android:layout_height="@dimen/midSize"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationY="290dp"/> <!-- Ajustar distancia vertical -->
    <ImageView
        android:id="@+id/imgOvejaSilueta"
        android:layout_width="@dimen/midSize"
        android:layout_height="@dimen/midSize"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="0dp"
        android:translationY="480dp"/>
    <ImageView
        android:id="@+id/imgPato"
        android:layout_width="@dimen/low_size"
        android:layout_height="@dimen/low_size"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="@dimen/translationX_low_size"
        android:translationY="460dp"/>


    <ImageView
        android:id="@+id/imgPatoSilueta"
        android:layout_width="@dimen/low_size"
        android:layout_height="@dimen/low_size"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="0dp"
        android:translationY="400dp"/>
    <ImageView
        android:id="@+id/imgCaballo"
        android:layout_width="@dimen/big_dimension"
        android:layout_height="@dimen/big_dimension"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="-7dp"
        android:translationY="540dp"/>
    <ImageView
        android:id="@+id/imgCaballoSilueta"
        android:layout_width="@dimen/big_dimension"
        android:layout_height="@dimen/big_dimension"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="100dp"
        android:translationY="420dp"/>
    <ImageView
        android:id="@+id/imgPerro"
        android:layout_width="@dimen/midSize"
        android:layout_height="@dimen/midSize"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="1130dp"
        android:translationY="11dp"/>
    <ImageView
        android:id="@+id/imgPerroSilueta"
        android:layout_width="@dimen/midSize"
        android:layout_height="@dimen/midSize"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="0dp"
        android:translationY="520dp"/>
    <ImageView
        android:id="@+id/imgConejo"
        android:layout_width="@dimen/low_size"
        android:layout_height="@dimen/low_size"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="1140dp"
        android:translationY="180dp"/>
    <ImageView
        android:id="@+id/imgConejoSilueta"
        android:layout_width="@dimen/low_size"
        android:layout_height="@dimen/low_size"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="1140dp"
        android:translationY="150dp"/>
    <ImageView
        android:id="@+id/imgVaca"
        android:layout_width="@dimen/big_dimension"
        android:layout_height="@dimen/big_dimension"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="1115dp"
        android:translationY="280dp"/>
    <ImageView
        android:id="@+id/imgVacaSilueta"
        android:layout_width="@dimen/big_dimension"
        android:layout_height="@dimen/big_dimension"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="11dp"
        android:translationY="290dp"/>
    <ImageView
        android:id="@+id/imgLoro"
        android:layout_width="@dimen/low_size"
        android:layout_height="@dimen/low_size"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="1140dp"
        android:translationY="450dp"/>
    <ImageView
        android:id="@+id/imgLoroSilueta"
        android:layout_width="@dimen/low_size"
        android:layout_height="@dimen/low_size"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="1155dp"
        android:translationY="320dp"/>
    <ImageView
        android:id="@+id/imgBurro"
        android:layout_width="@dimen/big_dimension"
        android:layout_height="@dimen/big_dimension"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="1110dp"
        android:translationY="560dp"/>
    <ImageView
        android:id="@+id/imgBurroSilueta"
        android:layout_width="@dimen/big_dimension"
        android:layout_height="@dimen/big_dimension"
        android:layout_margin="20dp"
        android:layout_gravity="top|start"
        android:translationX="1080dp"
        android:translationY="580dp"/>


    <include
        layout="@layout/felicitacion_layout" />

</FrameLayout>